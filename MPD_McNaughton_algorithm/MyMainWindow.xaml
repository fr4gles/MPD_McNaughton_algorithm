<Window x:Class="MPD_McNaughton_algorithm.MyMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="417" Width="804" MinWidth="614" SizeToContent="Height" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="435*" MinWidth="435"/>
            <ColumnDefinition Width="171" MinWidth="162"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="155" MinHeight="155"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Header="Wprowadzanie danych" Margin="0,0,5,0">
            <Grid Margin="0,0,-2,-2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="167"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="276*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="29"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Liczba procesorów / maszyn:" Height="30" VerticalAlignment="Top" Grid.RowSpan="2"/>
                <TextBox Margin="0,3,0,6" TextWrapping="Wrap" Text="TextBox" Grid.Column="1"/>
                <Button Content="Start algorytmu McNaughton'a" Grid.Column="2" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="355" Height="20"/>
                <Expander Header="Expander" Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="{x:Null}" HorizontalAlignment="Left" Width="600">
                    <Border BorderThickness="1" Height="75" Margin="0,0,-2,0">
                        <Border.BorderBrush>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="{DynamicResource {x:Static SystemColors.InfoTextColorKey}}"/>
                            </RadialGradientBrush>
                        </Border.BorderBrush>
                    </Border>
                </Expander>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Zadania:" Grid.RowSpan="2">
            <DataGrid x:Name="dataGrid"
                      Margin="0,0,-2,1"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      MaxHeight="366"
                      MaxColumnWidth="100"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Block.TextAlignment="Center"
                      IsReadOnly="False">
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Wykres Gantt'a" Margin="0,5,5,0" Grid.Row="1">
            <Expander Header="Expander" Margin="0,0,-12,0" IsExpanded="True">
                <WindowsFormsHost x:Name="wfHost" Height="174" Margin="0,0,8,0"/>
            </Expander>
        </GroupBox>
    </Grid>
</Window>
